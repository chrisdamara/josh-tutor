---
import Layout from "../layouts/Layout.astro";
import { SUBJECTS } from "../data/subjects";
---
<Layout seoTitle="Subjects | Josh Mega Tutoring" seoDescription="GCSE & A-Level Science, Maths, and IB tutoring. Exam technique, past paper mastery, and specialist support for Birmingham and UK students.">
  <section class="max-w-5xl mx-auto py-12 px-4">
    <h1 class="text-3xl font-bold mb-6 text-center mt-16">Subjects We Teach</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {[
        ...SUBJECTS.filter(s => s.level === "GCSE"),
        ...SUBJECTS.filter(s => s.level !== "GCSE")
      ].map(subject => (
        <div class="border rounded-xl p-6 bg-gray-900/80 shadow">
          <h2 class="text-xl font-bold mb-2">{subject.title}</h2>
          <p class="mb-1 text-sm text-gray-300">{subject.level} | {subject.examBoards.join(", ")}</p>
          <p class="mb-2">{subject.summary}</p>
          <p class="mb-2 text-xs text-gray-400">{subject.who}</p>
          <p class="mb-2 text-xs text-gray-400">{subject.outcomes}</p>
          <a href="/contact" class="inline-block mt-2 px-4 py-2 bg-primary text-white rounded font-semibold">{subject.cta}</a>
        </div>
      ))}
    </div>
    <div class="mt-10 text-center">
      <a href="/contact" class="px-6 py-3 bg-primary text-white font-bold rounded-3xl text-lg shadow">Book a Free Call</a>
    </div>
  </section>
</Layout>
