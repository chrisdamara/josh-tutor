---
import Layout from "../layouts/Layout.astro";
import { TESTIMONIALS } from "../data/testimonials";
---
<Layout seoTitle="Reviews & Results | Josh Mega Tutoring" seoDescription="Read testimonials and results from parents and students. See how our exam technique and dashboard system help students progress.">
  <section class="max-w-4xl mx-auto py-12 px-4">
    <h1 class="text-3xl font-bold mb-6 text-center">Reviews & Results</h1>
    <div class="space-y-8">
      {TESTIMONIALS.map(t => (
        <blockquote class="border-l-4 border-primary pl-4 italic text-lg">
          “{t.quote}”
          <footer class="mt-2 text-sm text-gray-400">{t.name} ({t.yearGroup}, {t.subject}) — {t.result}</footer>
        </blockquote>
      ))}
    </div>
    <div class="mt-10 text-center">
      <a href="/contact" class="px-6 py-3 bg-primary text-white font-bold rounded-3xl text-lg shadow">Book a Free Call</a>
    </div>
  </section>
</Layout>
